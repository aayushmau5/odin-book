datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  @@map("users")
  id        String @default(uuid()) @id
  username  String
  email     String @unique
  password  String
  posts     Post[] 
  // friends   User @relation(fields: [friendsId], references: [id])
  // friendsId User[]
  createdAt DateTime @default(now())
}

model Post {
  @@map("posts")
  id         String @default(uuid()) @id
  data       String
  createdAt  DateTime @default(now())
  author     User @relation(fields: [authorId], references: [id]) // only exists in Prisma level (doesn't exist on the db)
  authorId   String // foreign key (exists in the db)
  comments   Comment[]
}

model Comment {
  @@map("comments")
  id        String @default(uuid()) @id
  data      String
  createdAt DateTime @default(now())
  post      Post @relation(fields: [postId], references: [id])
  postId    String
}